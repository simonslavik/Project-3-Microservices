# Development Environment Variables for Docker Compose

# Database Configuration
POSTGRES_USER=auth_user
POSTGRES_PASSWORD=auth_password
POSTGRES_DB=auth_db
DATABASE_URL=postgresql://auth_user:auth_password@postgres:5432/auth_db?schema=public

# JWT Configuration
JWT_SECRET=your-super-secure-jwt-secret-key-here-development
JWT_REFRESH_SECRET=your-super-secure-refresh-secret-key-here-development

# Service URLs (Internal Docker Network)
AUTH_SERVICE_URL=http://auth-service:3001
USER_SERVICE_URL=http://user-service:3002
NOTES_SERVICE_URL=http://notes-service:3003
TAGS_SERVICE_URL=http://tags-service:3004

# CORS Configuration
CORS_ORIGIN=http://localhost:3000
CORS_CREDENTIALS=true

# Environment
NODE_ENV=development